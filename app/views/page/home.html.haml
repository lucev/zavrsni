%h1= @title
= link_to 'Nova obavijest', new_news_path

#news.rounded-box
  %h3 Obavijesti
  - @news.each do |news|
    %p
      = link_to news.title, news_path(news)
      %br/
      objavljeno: #{news.created_at.strftime("%d.%m.%Y u %H:%M")}
      %br/
      = news.summary

