%p#notice= notice

%h1= @title

%p
  Datum:
  = @news.date.strftime("%d.%m.%Y.")
%p
  %b Sažetak
  %p
    = @news.summary
- unless (@news.text.nil? or @news.text.empty?)
  %b Sadržaj
  %div.rounded-box
    %p
      = simple_format h(@news.text)
- unless (@news.status.nil? or @news.status.empty?)
  %p
    %b Status
    = @news.status


-content_for :sidebar do

  -if logged_in?
    %p
      = link_to admin? ? 'Dodaj obavijest' : 'Predloži obavijest', new_news_path
    %p
      = link_to 'Izmjeni obavijest', edit_news_path(@news)
    %p
      = link_to 'Obriši obavijest', @news, :confirm => 'Jeste li sigurni?', :method => :delete

