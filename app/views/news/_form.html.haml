= form_for @news do |f|
  -if @news.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news.errors.count, "error")} prohibited this news from being saved:"
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'

