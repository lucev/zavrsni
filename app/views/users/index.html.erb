<% @users.each do |user| %>
  <tr>
    <td><%= link_to "#{user.surname} #{user.name}", user %></td>
    <td><%= user.type %></td>
    <td><%= user.organization.name if member? user %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

