%h1 Listing events

%table
  %tr
    %th Name
    %th Start date
    %th End date
    %th Location
    %th Description
    %th
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.name
      %td= event.start_date
      %td= event.end_date
      %td= event.location
      %td= event.description
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete
      %td
        -form_tag ("#{apply_path}") do
          %input{:name => "event_id", :value => event.id, :type => "hidden"}
          %input{:name => "user_id", :value => current_user.id, :type => "hidden"}
          = submit_tag 'Prijava'

%br

= link_to 'New Event', new_event_path

