= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, 'Naziv'
    = f.text_field :name
  .field
    = f.label :start_date, 'Početak'
    = f.datetime_select :start_date, :order => [:day, :month, :year], :use_month_numbers => true
  .field
    = f.label :end_date, 'Završetak'
    = f.datetime_select :end_date, :order => [:day, :month, :year], :use_month_numbers => true
  .field
    = f.label :location, 'Mjesto'
    = f.text_field :location
  .field
    = f.label :description, 'Opis'
    = f.text_area :description
  .actions
    = f.submit 'Pošalji'

