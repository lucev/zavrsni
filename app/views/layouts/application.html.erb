<!DOCTYPE html>
<html>
<head>
  <title>Tigris</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="wrapper">
    <%= render :partial => 'layouts/header' %>
    <%= render :partial => 'layouts/navigation' %>
    <div id="content">
      <% unless content_for(:left_bar).blank? %>
          <div id="left_bar">
            <%= yield :left_bar %>
         </div>
      <% end %>
      <div id="main_content">
        <%= yield %>
      </div>
      <% unless content_for(:sidebar).blank? %>
          <div id="sidebar">
            <%= yield :sidebar %>
         </div>
      <% end %>
    </div>
  </div>
</body>
</html>

